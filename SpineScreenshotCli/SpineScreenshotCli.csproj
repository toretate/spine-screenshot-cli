<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.4" />
    <PackageReference Include="SixLabors.ImageSharp" Version="3.1.5" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="*.cs" />
    <Compile Include="Spine\**\*.cs" />
    <!-- Include spine-xna renderer files but exclude problematic debug renderer -->
    <Compile Include="..\spine-runtimes\spine-xna\src\SkeletonRenderer.cs" LinkBase="SpineXna" />
    <Compile Include="..\spine-runtimes\spine-xna\src\MeshBatcher.cs" LinkBase="SpineXna" />
    <Compile Include="..\spine-runtimes\spine-xna\src\Util.cs" LinkBase="SpineXna" />
    <Compile Include="..\spine-runtimes\spine-xna\src\XnaTextureLoader.cs" LinkBase="SpineXna" />
  </ItemGroup>

</Project>
